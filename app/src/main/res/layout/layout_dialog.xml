<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">
    <EditText
        android:id="@+id/edit_lName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Left Player Name"/>

    <EditText
        android:id="@+id/edit_rName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Right Player Name"
        android:layout_below="@id/edit_lName"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/edit_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Game notes (optional)"
        android:layout_below="@id/edit_rName"/>
</RelativeLayout>